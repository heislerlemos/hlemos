
<% @order_items.each do |item|%>
<br>

<table class="table">
  <tr>
    <th>Titulo</th>
    <th>Preço</th>
    <th>Total</th>
    <th>Quantidade</th>
  </tr>
  <tr>
    <td><%= item.product.titulo  %></td>
    <td><%= item.product.preco %> Kz </td>
    <td><%= item.total %> Kz</td>
    <%=  form_for item, remote: true  do |f| %>
    <td><%= f.number_field  :quantity, :value => item.quantity.to_i %>
</td>

  </tr>
</table>






<%= f.hidden_field :product_id, :value => item.product.id %>

<br>

<%= f.submit "Atualizar" , class: "button is-info" %>
<%= link_to "Remover Item", order_item_path(item), method: :delete, remote: true , class: "button is-danger"  %>
  <% end %>
<% end %>








<br>
<section class="hero is-link is-small">
  <div class="hero-body">
    <p class="title" >
    
   O valor do teu saldo corrente é   <%= current_order.subtotal %> Kz  
    </p>
  </div>
</section>


