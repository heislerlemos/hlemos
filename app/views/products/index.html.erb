<div class="container">
<section class="hero is-link">
  <div class="hero-body">
    <p class="title">
      Lista dos produtos 
    </p>
    <p class="subtitle">
      <%= notice %>
    </p>
  </div>
</section>
<br>
<div align="center">
<table class="table">
 
  <thead>
    <tr>
      <th>Produto</th>
      <th>Pre√ßo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.titulo %></td>
        <td><%= product.preco %></td>
        <td><%= link_to 'Show', product, class: "button" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "button" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Product', new_product_path , class: "button" %>
