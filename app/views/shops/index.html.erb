<div class="container">

<section class="hero is-link">
  <div class="hero-body">
    <p class="title">
       Productos 
    </p>
    <p class="subtitle">
      Esta é a lista de produtos disponiveis
    </p>
  </div>
</section>

<br>
<br>

<div align="center">

<table class="table">
  <thead>
    <tr>
      <th>Serviço</th>
      <th>Preço</th>
      
      <th colspan="1"></th>
      <th>Quantidade </th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.titulo %></td>
        <td><%= product.preco %></td>
	<td><%= link_to 'Mostrar', shop_path(product), class: 'button is-small is-primary' %></td>
	
	<td>
	  <%= form_for @order_item, remote: true  do |f| %>
	  <%= f.hidden_field :product_id, :value => product.id  %>

	  <%= f.number_field :quantity, :value => 1 , :min => 1 %>

	  <%= f.submit "Adicionar no carrinho" , class: 'button is-small is-success' %>

	  <% end %>
	</td>
        
      </tr>
    <% end %>
  </tbody>
</table>


<br>


<div id="card">
<%= render 'cards/card' %>
</div>
</div>

</div>
