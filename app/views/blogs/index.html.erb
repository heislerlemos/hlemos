<div class="container">
<div class="buttons has-addons">
   <%= link_to 'Administrador', new_blog_path, class: "button is-info is-selected"%>
</div>
 </div>
<br>
<br>

<div  class="columns is-mobile is-multiline is-centered" >

<% @blogs.each do |f| %>




<div class="card">
  <div class="card-image">
  <figure class="image is-4by3">
    <%= image_tag f.image_url%>

  </figure>
</div>

  <header class="card-header">
    <p class="card-header-title">
      <%= truncate(  f.titulo, :length => 35, :separator => ' ') %>

      </p>
    <a href="#" class="card-header-icon" aria-label="more options">
      <span class="icon">
              <%= fa_icon "angle-down" %>

      </span>
    </a>
  </header>
  <div class="card-content " align="center">
    <div class="content is-subtitle is-small">
  <%=  (f.created_at)  %>

    </div>
  </div>

  <footer class="card-footer">
    <%= link_to blog_path(f), class: "card-footer-item " do %>
    <%= fa_icon "eye" %>
    <% end %>

    <%= link_to  edit_blog_path(f), class: "card-footer-item" do  %>
    <%= fa_icon "pencil" %>
    <% end %>

    <%= link_to  blog_path(f),
              method: :delete,
              data: { confirm: 'Are you sure?' } , class: "card-footer-item" do %>
              <%= fa_icon "trash" %>
              <% end %>
  </footer>
</div>

<% end %>
 </div>

