<%= f.label :texto , class: "label" %>
</div>

<div class="field">
<%= f.text_area :texto ,  placeholder: "Insira o artigo", class: "textarea" , cols: "30", rows: "10" %>
</div>
<div class="field">
<%= link_to 'Back', blogs_path, class: "button is-secondary" %>
<%= f.submit "Guardar o artigo", class: "button is-primary" %>
</div>


<% end %>
</div>
</div>
