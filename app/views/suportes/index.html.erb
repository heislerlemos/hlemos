  <%= text_field_tag "hostname", @hostname, class: "form-control" , style: "width: 90%;", required: 'required', placeholder: "Host must contain suffix .com .net .ao .biz .org" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<br>
<br>



 <div class="row">
