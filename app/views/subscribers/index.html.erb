
<html>
      <%= stylesheet_link_tag    'subscribers', media: 'all', 'data-turbolinks-track': 'reload' %>

<head>
  <title>Agenda</title>

</head>
<body>
  <% 6.times do %>

  <br>

  <% end %>



<div class="container">
    <%= form_for @subscriber do |f| %>

<div class="field">
	  <label class="label">Nome</label>
	    <div class="control has-icons-left has-icons-right">
    <%= f.text_field :name, placeholder: "Insira o seu nome " , class: "input is-primary"%>
       <span class="icon is-small is-left">
                    	<%= fa_icon "user" %>
    </span>

</div>
</div>


<br>
<div class="field">
		  <label class="label">Numero</label>
	    <div class="control has-icons-left has-icons-right">

 <%= f.number_field :number, placeholder: "Insira o seu número de telefone", class: "input is-primary" , style: "width: 50%;"%>
        <span class="icon is-small is-left">
      		<%= fa_icon "phone" %>
        </span>

</div>
</div>
<br>
<div class="field" >
			  <label class="label">Email</label>
	    <div class="control has-icons-left has-icons-right">

    <%= f.email_field :email, placeholder: "Insira o seu endereço de email", class: "input is-primary" %>
            <span class="icon is-small is-left">
      		<%= fa_icon "envelope" %>
        </span>

</div>
<br>
<div class="field">

					  <label class="label">Feedback</label>
            <div class="select is-primary ">

    <%= f.select :source, ["Vizinhos", "Redes Sociais", "Negocio", "Agencia"], prompt: "Como ouviste acerca de mim ? "   %>

  </div>

  </div>
   </div>

<br>
<div class="field is-grouped">
     <%= f.submit "Enviar", class: "button is-primary" %>
</div>
 <% end %>
</div>

</body>
</html>
