<p id="notice"><%= notice %></p>
<div class="container">
  <br>
  <br>
  <section class="hero is-small is-link">
  <div class="hero-body">
    <p class="title">
      Lista de objectivos
    </p>
   
  </div>
</section>
  <br>
  <center>
<table class="table">
  <thead>
    <tr>
      <th>Ano</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to 'Ver', todo_list, class: "button" %></td>
        <td><%= link_to 'Editar', edit_todo_list_path(todo_list) , class: "button" %></td>
        <td><%= link_to 'Apagar', todo_list, method: :delete, data: { confirm: 'Are you sure?' } , class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Adicionar ', new_todo_list_path , class: "button " %>

</center>
<br>

</div>
